<!DOCTYPE html>
<html>
  <head>
    <title>Instrumental</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">


    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="navbar">
    <div class="nav-container">
      <div class="d-flex">
        <div class="logo">

        </div>
        <div class="menu-wrapper">
          <div class="menu-items">
            <ul>
              <li><%= link_to 'Browse instruments', instruments_path %></li>
              <li><%= link_to 'My rentals', rentals_path %></li>
              <li><%= link_to 'My instruments', orders_path %></li>
              <li><%= link_to 'Conversations', conversations_path %></li>
              <% if current_user %>
                <li><%= link_to 'My profile', profile_path(current_user) %></li>
              <% end %>

            </ul>
          </div>

          <div class="navbar-right">
            <% if current_user %>
              <%= link_to 'logout', destroy_user_session_path, method: :delete  %>
              <%= cl_image_tag "#{current_user.photo.key}", gravity: "face", height: 56, width: 56, crop: :fill, class: "avatar" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/flashes' %>
  <%= yield %>
  </body>
</html>
