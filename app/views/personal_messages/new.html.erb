<div class="container">
  <h1>New message to <%= @receiver.first_name %> <%= @receiver.last_name %></h1>

  <%= form_for @personal_message do |f| %>
    <%= hidden_field_tag 'receiver_id', @receiver.id %>

  <!--   <%= f.label :body %> -->
    <%= f.text_area :body %><br />

    <%= f.submit 'Submit', class: "btn btn-primary" %>
  <% end %>
</div>
