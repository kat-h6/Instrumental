<h1>My Rentals</h1>
<% @bookings.each do |booking| %>
  <div>
    <%#= cl_image_tag booking.instrument.photo.key %>

    <h2>Owner: <%= booking.instrument.owner %></h2>
    <p>Details: <%= booking.instrument.details %></p>
    <p>Start date: <%= booking.start_date %></p>
    <p>End date: <%= booking.end_date %></p>
    <p>Price: <%= booking.price %></p>
    
    <%#= REVIEWS %>

    <% if booking.end_date < Date.today %>
    <div class="card">
      <ul class="list-group">
        <% booking.reviews.each do |review| %>
          <li class="list-group-item">
            <p><%= review.title %></p>
            <%= @star_checked %>
            <p><%= review.content %></p>
          </li>   
        <% end %>
      </ul>
      <%= link_to 'Leave a review', new_booking_review_path(booking.id), class: 'btn btn-secondary' %>
    </div>
    <% end %>
  </div>
<% end %>

<%= link_to 'Back', root_path, class: 'btn btn-primary' %>
