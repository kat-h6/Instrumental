<div class="container">
<div class="d-flex">
  <h1>My Rentals <% if @bookings.count > 0 %>(<%= @bookings.count %>)<% end %></h1>
  <%= link_to 'Find an instrument', instruments_path, class: 'btn btn-primary' %>
</div>

<div class="list-wrapper">
<% @bookings.each do |booking| %>
  <div>

  <div class="list-item">
    <div class="d-flex">
      <div class="inner-img">
        <%= cl_image_tag instrument.photo.key %>
      </div>

      <div class="inner-content">
        <div class="d-flex">
          <h2>Owner: <%= instrument.owner %></h2>
          <p><%= booking.start_date %> - <%= booking.end_date %></p>
        </div>
        <p>Price: <%= booking.price %></p>
      </div>
    </div>
  </div>
<% end %>

<%= link_to 'Back', root_path, class: 'btn btn-primary' %>
