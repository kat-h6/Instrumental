  <div class="nav-container">
  <div class="d-flex">
    <div class="logo">

    </div>
    <div class="menu-wrapper">
      <div class="menu-items">
        <ul>
          <li><%= link_to 'Rent an instrument', instruments_path %></li>
          <li><%= link_to 'My rentals', rentals_path %></li>
          <li><%= link_to 'My instruments', orders_path %></li>
        </ul>
      </div>
      <%= image_tag('account_circle_black_48dp.svg') %>
    </div>
  </div>
